{
  "manifest_version": 3,
  "name": "Wikidata One Click Info",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "Icon/Wiki_logo_16.png",
      "24": "Icon/Wiki_logo_24.png",
      "32": "Icon/Wiki_logo_32.png"
    },
    "default_title": "Wikidata One Click Info",
    "default_popup": "Popup/popup.html"
  },

  "description": "This is an extension to look up data from Wikidata",
  "icons": {
    "16": "Icon/Wiki_logo_16.png",
    "32": "Icon/Wiki_logo_32.png",
    "48": "Icon/Wiki_logo_48.png",
    "64": "Icon/Wiki_logo_64.png",
    "128": "Icon/Wiki_logo_128.png"
  },
  "author": "Wikidata OCI team",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["page.js", "content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
